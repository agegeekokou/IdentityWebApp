@page "{id:int}"
@model IdentityWebApp.Pages.Admin.Identities.DeleteModel
@{
    ViewData["Title"] = "Delete Identity";
}

<h1>Delete Identity</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Identity</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Identity.Name
        </dd>
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @Model.Identity.City
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Model.Identity.Age
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Identity.Image.FilePath" alt="@Model.Identity.Name" style="max-width: 200px;" />
        </dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Identity.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-page="./Index">Cancel</a>
</form>
