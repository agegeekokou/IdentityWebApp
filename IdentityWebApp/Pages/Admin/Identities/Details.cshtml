@page "{id:int}"
@model IdentityWebApp.Pages.Admin.Identities.DetailsModel
@{
    ViewData["Title"] = "Identity Details";
}

<h1>Identity Details</h1>

<div>
    <h4>Identity</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Identity.Name
        </dd>
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @Model.Identity.City
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Model.Identity.Age
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Identity.Image.FilePath" alt="@Model.Identity.Name" style="max-width: 200px;" />
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Identity.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
